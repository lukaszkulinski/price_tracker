<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            Price Tracker - Register
                          
                
        </title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body class="text-center">
        {% if error %}
            <div>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <main class="form-signin">
            <form action="{{ path('login') }}" method="post">
                <img class="mb-4" src="{{ asset('images/logo-round.png') }}" alt="" width="100" height="100">
                <h1 class="h3 mb-3 fw-normal">
                    Login
                </h1>

                <div class="form-floating">
                    <input type="text" class="form-control" id="username" palceholder="Username" name="_username">
                    <label for="username">
                        Username
                    </label>
                </div>
                <div class="form-floating">
                    <input type="password" class="form-control" id="password" placeholder="Password" name="_password">
                    <label for="password">
                        Password
                    </label>
                </div>

                {# <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" value="remember-me"> Remember me
                            </label>
                            </div> #}
                <button class="w-100 btn btn-lg btn-primary" type="submit">
                    Login
                </button>
            </form>
        </main>
    </body>
</html>
